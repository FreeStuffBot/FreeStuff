{
  "name": "freestuff-mono",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "run-api": "cd ./apps/api && yarn start",
    "run-app-publisher": "cd ./apps/app-publisher && yarn start",
    "run-telegram-publisher": "cd ./apps/telegram-publisher && yarn start",
    "run-discord-gateway": "cd ./apps/discord-gateway && yarn start",
    "run-discord-interactions": "cd ./apps/discord-interactions && yarn start",
    "run-discord-publisher": "cd ./apps/discord-publisher && yarn start",
    "run-link-proxy": "cd ./apps/link-proxy && yarn start",
    "run-manager": "cd ./apps/manager && yarn start",
    "run-thumbnailer": "cd ./apps/thumbnailer && yarn start"
  },
  "devDependencies": {
    "turbo": "1.4.3"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  }
}
